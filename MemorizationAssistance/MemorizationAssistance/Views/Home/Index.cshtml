@model IEnumerable<MemorizationAssistance.Models.Book>

@{
    ViewBag.Title = "ホーム";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("問題へ", "Index", "Training", new { bookId = item.Id }, new { })
            </td>
        </tr>
    }

</table>
